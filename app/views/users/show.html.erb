<header>
  <h3>
    <%= @user.username %>
  </h3>
</header>
<%= render partial: "/partials/flash" %>
<content>
  <div class="my_profile">

    <ul class="donations">
      <h3>
        My Donations
      </h3>
      <% @donations.each do |donation| %>
        <li>
          <h5>
            Donated <%= donation.amount %> to
          </h5>
          <h4> 
            <%= link_to  "#{donation.organization.name}", organization_path(donation.organization) %>
          </h4>
        </li>
      <% end %>
    </ul>

    <ul class="reviews">
      <h3>
        My Reviews
      </h3>
      <% @reviews.each do |review| %>
        <li>
          <h4>
          <%= link_to  "#{review.organization.name}", organization_path(review.organization) %>:</br>
          </h4>
          <h5 style="text-indent: 25px;">
            Score: <%= review.score%></br>
            <h4 style="text-indent: 25px;">
              <%= review.text%>
            </h4>
          </h5>
      <% end %>
    </ul>
  </div>
</content>
